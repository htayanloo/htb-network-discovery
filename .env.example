# Database Configuration
DATABASE_URL=sqlite:///network_discovery.db

# SSH Configuration
SSH_TIMEOUT=30
SSH_BANNER_TIMEOUT=15

# Discovery Configuration
DISCOVERY_MAX_DEPTH=10
DISCOVERY_RECURSIVE=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false

# Security
# Store credentials in environment variables or use SSH keys
DEFAULT_SSH_USERNAME=admin
DEFAULT_SSH_PASSWORD=

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/discovery.log
